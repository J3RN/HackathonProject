<% if current_user %>
<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Loves</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image.votes.count %></td>
        <td><%= image_tag(image.image, :height => '50') %></td>
        <td><%= link_to 'Show', image %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
<% end %>
